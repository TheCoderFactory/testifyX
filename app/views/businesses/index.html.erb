<h1>Listing businesses</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Background image</th>
      <th>Name</th>
      <th>Info</th>
      <th>Street</th>
      <th>Suburb</th>
      <th>Postcode</th>
      <th>State</th>
      <th>Country</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Twitter</th>
      <th>Facebook</th>
      <th>Linkedin</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.logo %></td>
        <td><%= business.background_image %></td>
        <td><%= business.name %></td>
        <td><%= business.info %></td>
        <td><%= business.street %></td>
        <td><%= business.suburb %></td>
        <td><%= business.postcode %></td>
        <td><%= business.state %></td>
        <td><%= business.country %></td>
        <td><%= business.phone %></td>
        <td><%= business.email %></td>
        <td><%= business.twitter %></td>
        <td><%= business.facebook %></td>
        <td><%= business.linkedin %></td>
        <td><%= business.latitude %></td>
        <td><%= business.longitude %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

